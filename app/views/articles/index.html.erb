<div class="row">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <h2>
      All Articles
      <%= link_to 'New Article', new_article_path,  class: 'btn btn-success pull-right' %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3 col-sm-push-9">
    <div class="well well-sm">
      <h2 class="text-center">Weather</h2>
      <%= react_component('weather', nil, class: 'react-component') %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-9 col-sm-pull-3">
    <div class="row">
      <% @articles.each do |article| %>
        <div class="col-xs-12 col-md-6 col-lg-4">
          <div class="well">
            <div class="row">
              <div class="col-xs-12 col-sm-8">
                <h4><%= article.title %><br><small><%= article.author %></small></h4>
              </div>
              <div class="col-xs-12 col-sm-4"><%= l article.updated_at, format: :short %></div>
              <div class="col-xs-12"><hr></div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <div class="prev-article">
                  <%= article.content %>
                </div>
                <p><%= link_to 'See Article', article %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>


